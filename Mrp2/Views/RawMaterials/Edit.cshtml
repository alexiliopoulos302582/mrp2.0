@model Mrp2.Models.RawMaterialViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">
</head>
<body>

<h4>RawMaterial</h4>
<hr />
<div class="row ms-3">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RawMaterial.Id" />
            <div class="form-group">
                    <label asp-for="RawMaterial.Name" class="control-label"></label>
                    <input asp-for="RawMaterial.Name" class="form-control" />
                    <span asp-validation-for="RawMaterial.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="RawMaterial.Description" class="control-label"></label>
                    <input asp-for="RawMaterial.Description" class="form-control" />
                    <span asp-validation-for="RawMaterial.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="RawMaterial.Notes" class="control-label"></label>
                    <input asp-for="RawMaterial.Notes" class="form-control" />
                    <span asp-validation-for="RawMaterial.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="RawMaterial.Quantity" class="control-label"></label>
                    <input asp-for="RawMaterial.Quantity" class="form-control" />
                    <span asp-validation-for="RawMaterial.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="RawMaterial.BoundQTY" class="control-label"></label>
                    <input asp-for="RawMaterial.BoundQTY" class="form-control" />
                    <span asp-validation-for="RawMaterial.BoundQTY" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="RawMaterial.Category" class="control-label"></label>
                    <select asp-for="RawMaterial.Category" class="form-control mb-3" asp-items="Model.Categories"></select>
                    <span asp-validation-for="RawMaterial.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="RawMaterial.Expiration" class="control-label"></label>
                    <input asp-for="RawMaterial.Expiration" class="form-control" />
                    <span asp-validation-for="RawMaterial.Expiration" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="RawMaterial.LeadTime" class="control-label"></label>
                    <input asp-for="RawMaterial.LeadTime" class="form-control" />
                    <span asp-validation-for="RawMaterial.LeadTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="RawMaterial.Location" class="control-label"></label>
                    <input asp-for="RawMaterial.Location" class="form-control" />
                    <span asp-validation-for="RawMaterial.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="RawMaterial.ReorderPoint" class="control-label"></label>
                    <input asp-for="RawMaterial.ReorderPoint" class="form-control" />
                    <span asp-validation-for="RawMaterial.ReorderPoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="RawMaterial.SafetyStock" class="control-label"></label>
                    <input asp-for="RawMaterial.SafetyStock" class="form-control" />
                    <span asp-validation-for="RawMaterial.SafetyStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="RawMaterial.Status" class="control-label"></label>
                    <select asp-for="RawMaterial.Status" class="form-control mb-3" asp-items="Model.Statuses"></select>
                    <span asp-validation-for="RawMaterial.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="RawMaterial.Supplier" class="control-label"></label>
                    <select asp-for="RawMaterial.Supplier" class="form-control mb-3" asp-items="Model.Suppliers"></select>
                    <span asp-validation-for="RawMaterial.Supplier" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="RawMaterial.UnitCost" class="control-label"></label>
                    <input asp-for="RawMaterial.UnitCost" class="form-control" />
                    <span asp-validation-for="RawMaterial.UnitCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="RawMaterial.Eoq" class="control-label"></label>
                    <input asp-for="RawMaterial.Eoq" class="form-control" />
                    <span asp-validation-for="RawMaterial.Eoq" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="RawMaterial.Unit" class="control-label"></label>
                    <select asp-for="RawMaterial.Unit" class="form-control mb-3" asp-items="Model.Units"></select>
                    <span asp-validation-for="RawMaterial.Unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary m-2" />
            </div>
        </form>
    </div>
</div>

<div>
        <a class="btn btn-warning" class="btn btn-warning m-3" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
